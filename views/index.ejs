<body>
    <div class="container">
        <h1>Upload Projects</h1>
        <h2>Drop projects (zipped) here.</h2>
        <div id="drag-drop-area"></div>
    </div>
    <script
        src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
